{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.(html|css|js|json|ico|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/blog/posts.js": {
      "maxDuration": 30
    },
    "api/blog/post.js": {
      "maxDuration": 30
    },
    "api/blog/process.js": {
      "maxDuration": 60
    },
    "api/blog/ticker.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/blog/process",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/blog/process",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/blog/process",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/blog/process",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/blog/process",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/blog/process",
      "schedule": "0 20 * * *"
    }
  ]
}
